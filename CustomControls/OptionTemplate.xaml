<!--  带标签的ComboBox模板  -->
<ComboBox
    x:Class="M9AWPF.CustomControls.OptionTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="5"
    VerticalAlignment="Center"
    d:Background="WhiteSmoke"
    d:DesignHeight="150"
    d:DesignWidth="400"
    hc:TitleElement.Title="{Binding RelativeSource={RelativeSource Mode=Self}, Path=OptionName}"
    hc:TitleElement.TitlePlacement="Left"
    hc:TitleElement.TitleWidth="100"
    ItemsSource="{Binding RelativeSource={RelativeSource Mode=Self}, Path=OptionValues}"
    Style="{StaticResource ComboBoxExtend}"
    mc:Ignorable="d" />
