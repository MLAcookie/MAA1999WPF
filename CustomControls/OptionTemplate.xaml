<!--  带标签的ComboBox模板  -->
<Border
    x:Class="M9AWPF.CustomControls.OptionTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="RootBorder"
    Margin="5"
    d:Background="WhiteSmoke"
    d:DesignHeight="150"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <ComboBox
        Name="LocalComboBox"
        VerticalAlignment="Center"
        hc:TitleElement.Title="{Binding OptionName, ElementName=RootBorder, FallbackValue=BindingFail}"
        hc:TitleElement.TitlePlacement="Left"
        hc:TitleElement.TitleWidth="100"
        ItemsSource="{Binding OptionValues, ElementName=RootBorder}"
        Style="{StaticResource ComboBoxExtend}" />
</Border>
